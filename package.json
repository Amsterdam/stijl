{
  "name": "stijl",
  "version": "2.1.0",
  "description": "Generieke styling voor data.amsterdam.nl",
  "author": "Datapunt Amsterdam",
  "scripts": {
    "install-gemeente-amsterdam": "npm --prefix ./node_modules/gemeente-amsterdam-patterns install --prefix ./node_modules/gemeente-amsterdam-patterns",
    "build-gemeente-amsterdam-css": "npm run sass --prefix ./node_modules/gemeente-amsterdam-patterns",
    "build-all": "npm run install-gemeente-amsterdam && npm run build-gemeente-amsterdam-css",
    "build-stijl": "gulp"
  },
  "pre-commit": "build-stijl",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^7.2.4",
    "del": "^3.0.0",
    "gemeente-amsterdam-patterns": "git+https://git@gitlab.infoprojects.nl/pattern-lab/gemeente-amsterdam.git",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-babel": "^7.0.1",
    "gulp-concat-css": "^3.1.0",
    "gulp-foreach": "^0.1.0",
    "gulp-if": "^2.0.2",
    "gulp-replace-path": "^0.4.0",
    "gulp-sass": "^3.1.0",
    "gulp-sass-lint": "^1.3.4",
    "patternlab-node": "2.12.0",
    "pre-commit": "^1.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Amsterdam/stijl.git"
  }
}
